
<%= form_for @post, html: { multipart: true }  do |f| %>
	
		<div class="row">
	
			<%= f.label :image, class: "control-label" %>
			<%= f.file_field :image, class: "btn btn-success" %>	
		</div>
		

	<div class="row">
		<div class="form-group label-floating has-success col-md-4 ">
			<%= f.label :title, class: "control-label" %>
			<%= f.text_field :title, class: "form-control" %>
		</div>	
	</div>

	<div class="row">
		<div class="form-group label-floating has-success col-md-4 ">
			<%= f.label :rating, class: "control-label" %>
			<%= f.text_field :rating, class: "form-control" %>
		</div>	
	</div>

	<div class="row">
		<div class="form-group label-floating has-success col-md-4 ">
			<%= f.label :price, class: "control-label" %>
			<%= f.text_field :price, class: "form-control" %>
		</div>	
	</div>

	<div class="row">
		<div class="form-group label-floating has-success col-md-4 ">
			<%= f.label :location, class: "control-label" %>
			<%= f.text_field :location, class: "form-control" %>
		</div>	
	</div>

	<div class="row">
		<div class="form-group label-floating has-success col-md-4 ">
			<%= f.label :review, class: "control-label" %>
			<%= f.text_area :review, class: "form-control" %>
		</div>	
	</div>

	<%= f.submit class: "btn btn-success" %>
	<%= link_to "Cancel", root_path, class: "btn btn-success"%> 
<% end %>